set surround
set ignorecase                  " Case insensitive search
set smartcase                   " Case sensitive when uc present
set clipboard+=unnamed          " Use system clipboard by default
source ~/.vimrc


let mapleader = " "
map <leader>rr :action Rerun<CR>
map <leader>rn :action RenameElement<CR>
map <leader>tt :action ActivateTerminalToolWindow<CR>
map <leader>bp :action ToggleLineBreakpoint<CR>
map <leader>gi :action GotoImplementation<CR>
map <leader>fu :action FindUsages<CR>
map <leader>cc :action CommentByLineComment<CR>
map <leader>cb :action CommentByLineComment<CR>

set visualbell
set noerrorbells
set ideajoin
