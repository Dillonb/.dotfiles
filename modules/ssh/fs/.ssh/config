# Link this file to ~/.ssh/config
ControlMaster auto
ControlPath /tmp/ssh_mux_%h_%p_%r
ControlPersist 4h

Host zoo.uvm.edu
    User dbelivea
    GSSAPIAuthentication=yes
    GSSAPIDelegateCredentials=yes

Host okapi.uvm.edu
    User dbelivea
    GSSAPIAuthentication=yes
    GSSAPIDelegateCredentials=yes

Host drup-dev
    User dbelivea
    ProxyCommand ssh dbelivea@okapi.uvm.edu nc %h 22

Host dillonbeliveau.com
    User dillon

Host bitbucket.org-personal
    User git
    IdentityFile ~/.ssh/id_rsa_personal
    HostName bitbucket.org
    ControlPersist 1m

Host bitbucket.org
    User git
    ControlPersist 1m
    IdentityFile ~/.ssh/id_rsa

Host github.com
    ControlPersist 1m
    User git
    IdentityFile ~/.ssh/id_rsa_personal
